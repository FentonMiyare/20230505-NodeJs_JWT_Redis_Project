<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <div class="wrapper">
      <header class="header" role="banner" aria-label="The Top">
        <%- include("./partials/nav.ejs") %>

        <section class="section__img">
          <img src="/svg/icon/admin.svg" alt="svg image" />
        </section>

        <main class="[ flow ] [ main ]">
          <h1 class="main__heading">This Is Your Admin Dashboard</h1>
          <h2 class="main__sub">
            <strong><%= user.username %></strong> Profile
          </h2>
          <a
            class="main__button"
            href="/api/v1/admin/users?page=1&sortBy=createdAt"
            ><span>Get Users</span></a
          >
        </main>

        <!--Waves Container-->
        <%- include("./partials/waves.ejs") %>
        <!--Waves end-->
      </header>

      <article>
        <section class="section">
          <div class="container">
            <h2>Admin Functions</h2>
            <div class="">
              <h3>Get All Users</h3>
              <a href="/api/v1/admin/users">Get All Users</a>

              <h3>Create New User</h3>
              <a href="/api/v1/admin/create_user">Create User</a>

              <h3>Get All Orders</h3>
              <a
                href="/api/v1/admin/orders?page=1&limit=100&sortBy=createdAt&OrderBy=desc&filterBy=category"
                >Get All Orders</a
              >

              <h3>Create New Order</h3>
              <a href="/order-page">Create New Order*</a>
            </div>
          </div>
        </section>
      </article>

      <%- include('partials/footer'); -%>
    </div>
    <script src="/js/main.js"></script>
  </body>
</html>
