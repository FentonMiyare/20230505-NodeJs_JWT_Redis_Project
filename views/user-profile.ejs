<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <div class="wrapper">
      <header class="header" role="banner" aria-label="The Top">
        <%- include("./partials/nav.ejs") %>

        <main class="[ flow ] [ main ]">
          <h1 class="main__heading">Hi, <%= user.username %></h1>
          <h2 class="main__sub">Welcome To Your Profile!</h2>
          <a class="main__button" href="/"><span>Back Home</span></a>
        </main>

        <!--Waves Container-->
        <%- include("./partials/waves.ejs") %>
        <!--Waves end-->
      </header>

      <section id="insta_nav">
        <div class="insta_nav">
          <nav class="content__sidebar-inner">
            <h2>Summary</h2>
            <ul id="table-of-contents"></ul>
          </nav>
        </div>
      </section>

      <article>
        <section class="section">
          <div class="container">
            <div class="row">
              <div class="profile_image">
                <h2>Profile Picture</h2>
                <div class="img illustrations">
                  <img src="<%= user.profileImage %>" alt="profile Image" />
                </div>
                <div class="btn"></div>
              </div>
              <div class="profile_info">
                <h2>Details</h2>
                <p>
                  <h3>Token: </h3>
                  <span id="token"><%= user.accessToken %></span>
                </p>
                <p><h3>Id: </h3><span id="id"><%= user.id %></span></p>
                <p>
                  <h3>Email: </h3
                  ><span id="email"><%= user.email %></span>
                </p>
                <p>
                  <h3>Phone Number: </h3
                  ><span id="email"><%= user.whatsAppNumber %></span>
                </p>
                <h3>Authorities:</h3>
                <% for (let i = 0; i < user.roles.length; i++) { %>
                <ul id="authorities">
                  <li><%= user.roles[i] %></li>
                </ul>
                <% } %>
              </div>
            </div>
          </div>
        </section>

        <section>
          <div class="container">
            <h2>Orders:</h2>
            <% for (let i = 0; i < user.order.length; i++) { %>
            <ul id="authorities">
              <li>
                <a href="/api/v1/admin/orders/<%= user.orders[i] %>"
                  ><%= user.order[i] %></a
                >
              </li>
            </ul>
            <% } %>
          </div>
        </section>
      </article>
      <%- include('partials/footer'); -%>
    </div>
    <script src="/js/main.js" type="module"></script>
  </body>
</html>