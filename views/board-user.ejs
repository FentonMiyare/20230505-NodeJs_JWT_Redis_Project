<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <div class="wrapper">
      <header class="header" role="banner" aria-label="The Top">
        <%- include("./partials/nav.ejs") %>

        <section class="section__img">
          <img src="/svg/icon/user-dashboard.svg" alt="svg image" />
        </section>

        <main class="[ flow ] [ main ]">
          <h1 class="main__heading">This Is Your User Dashboard</h1>
          <h2 class="main__sub">
            <strong><%= user.username %></strong> Profile
          </h2>
          <a class="main__button" href="/api/v1/order-page"
            ><span>Make An Order</span></a
          >
        </main>

        <!--Waves Container-->
        <%- include("./partials/waves.ejs") %>
        <!--Waves end-->
      </header>

      <article>
        <section class="section">
          <div class="container">
            <h2>User Functions</h2>
            <div class="">
              <h3>View All Available Writers</h3>
              <a href="/api/v1/user/writers">Get All Writers</a>
            </div>
          </div>
        </section>
      </article>

      <%- include('partials/footer'); -%>
    </div>
    <script src="/js/main.js"></script>
  </body>
</html>
