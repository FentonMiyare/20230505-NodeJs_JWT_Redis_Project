<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <div class="wrapper">
      <%- include("./partials/nav.ejs") %>

      <header class="header" role="banner" aria-label="The Top">
        <%- include("./partials/nav.ejs") %>

        <section class="section__img">
          <img src="/svg/icon/allorders.svg" alt="svg image" />
        </section>

        <main class="[ flow ] [ main ]">
          <h1 class="main__heading">ALL ORDERS</h1>
          <h2 class="main__sub">
            All orders appear based on time the user makes an
            <strong>order</strong>.
          </h2>
          <a
            class="main__button"
            href="/api/v1/admin/users?page=1&sortBy=createdAt"
            ><span>[Button]</span></a
          >
        </main>

        <!--Waves Container-->
        <%- include("./partials/waves.ejs") %>
        <!--Waves end-->
      </header>

      <article>
        <section class="section">
          <div class="container">
            <h2>Orders List</h2>
            <ul class="recipes">
              <% orders.forEach(order => { %>
              <li class="order_list">
                <h3><%= order.title %></h3>
                <h4><%= order.work %> for <%= order.level %></h4>
                <p><strong>Number of pages: </strong> <%= order.pages %></p>
                <p><strong>Deadline:</strong> <%= order.deadline %></p>
                <p><strong>Academic Level:</strong> <%= order.level %></p>
                <p>
                  <strong>Date Added:</strong> <%=
                  order.addedDate.toDateString() %>
                </p>
                <div class="btn_grp">
                  <a href="/api/v1/admin/orders/<%= order._id %>">View Order</a>
                  <!-- <a href="/api/v1/admin/orders/<%= order._id %>">Delete</a> -->
                  <%- include("./partials/deleteForm.ejs", { url:
                  `/api/v1/admin/orders/${order._id}`, name: `Delete Order` })
                  %>
                </div>
              </li>
              <% }) %>
            </ul>
            <a href="/api/v1/admin/orders?page=2&sortBy=createdAt">Next Page</a>
          </div>
        </section>
      </article>

      <%- include('partials/footer'); -%>
    </div>
    <script src="/js/main.js" type="module"></script>
  </body>
</html>
