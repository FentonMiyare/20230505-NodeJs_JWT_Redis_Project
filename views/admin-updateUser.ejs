<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <div class="wrapper">
      <header class="header" role="banner" aria-label="The Top">
        <%- include("./partials/nav.ejs") %>

        <main class="[ flow ] [ main ]">
          <h1 class="main__heading">[Heading]</h1>
          <h2 class="main__sub">
            <strong><%= user.username %></strong> Profile
          </h2>
          <a
            class="main__button"
            href="/api/v1/admin/users?page=1&sortBy=createdAt"
            ><span>[Button]</span></a
          >
        </main>

        <!--Waves Container-->
        <%- include("./partials/waves.ejs") %>
        <!--Waves end-->
      </header>

      <article>
        <section class="section">
          <div class="container">
            <h2>Edit Form</h2>

            <div id="editForm">
              <%- include('./partials/editUser-Form.ejs', { url:
              `/api/v1/user/${user._id}` }) %>
              <div class="btn_grp">
                <a href="/api/v1/user/me">Cancel</a>
                <button type="submit" form="a_form">Submit</button>
              </div>
            </div>
          </div>
        </section>
      </article>

      <%- include('partials/footer'); -%>
    </div>
    <script src="/js/main.js" type="module"></script>
  </body>
</html>
