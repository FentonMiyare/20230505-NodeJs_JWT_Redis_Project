<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <div class="wrapper">
      <header class="header" role="banner" aria-label="The Top">
        <%- include("./partials/nav.ejs") %>

        <section class="section__img">
          <img src="/svg/icon/profile.svg" alt="svg image" />
        </section>

        <main class="[ flow ] [ main ]">
          <h1 class="main__heading">Profile Update, <%= user.username %></h1>
          <h2 class="main__sub">Updating Your Profile Is As Easy As ABC!</h2>
          <a class="main__button" href="/"><span>Back Home</span></a>
        </main>

        <!--Waves Container-->
        <%- include("./partials/waves.ejs") %>
        <!--Waves end-->
      </header>

      <section id="insta_nav">
        <div class="insta_nav">
          <nav class="content__sidebar-inner">
            <h2>Summary</h2>
            <ul id="table-of-contents"></ul>
          </nav>
        </div>
      </section>

      <article>
        <section class="section">
          <div class="container">
            <h2>Edit Form</h2>

            <div id="editForm">
              <%- include('./partials/editUser-Form.ejs', { url:
              `/api/v1/user/${user._id}` }) %>
              <div class="btn_grp">
                <a href="/api/v1/user/me">Cancel</a>
                <button type="submit" form="a_form">Submit</button>
              </div>
            </div>
          </div>
        </section>
      </article>

      <%- include('partials/footer'); -%>
    </div>
    <script src="/js/main.js" type="module"></script>
  </body>
</html>
