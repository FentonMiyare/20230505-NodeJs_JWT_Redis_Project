<%- include("./partials/head.ejs") %>

<body>
  <div class="wrapper">
    <header class="header" role="banner" aria-label="The Top">
      <%- include("./partials/nav.ejs") %>
    </header>

    <section class="login__page">
      <div class="container">
        <div id="result"></div>
        <div class="message"></div>

        <div class="row" id="login-box">
          <div class="form-modal">
            <!-- <div class="form-toggle">
                <button id="login-toggle">log in</button>
                <button id="signup-toggle">sign up</button>
              </div> -->
            <!--onclick="toggleLogin()"-->
            <!--onclick="toggleSigin()"-->

            <div id="login-form">
              <form
                class="loginForm"
                name="loginForm"
                action="/api/v1/auth/forget-password"
                method="post"
              >
                <div class="heading">
                  <h2>Forgot your password?</h2>
                  <p>
                    Don't fret! Just type in your email and we will send you a
                    code to reset your password.
                  </p>
                </div>
                <input
                  type="email"
                  name="email"
                  placeholder="Enter email"
                  required
                />
                <input type="submit" class="btn login" value="reset password" />
                <p>
                  Back to
                  <a href="/login">Sign In</a>
                </p>
                <hr />
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include('partials/footer'); -%>
  </div>
</body>
