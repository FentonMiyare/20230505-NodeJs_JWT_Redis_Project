        </li>
        <% } %> <% } else { %>
        <li class="nav__item"><a href="/about">About Us</a></li>
        <li class="nav__item"><a href="/features">Features</a></li>
        <li class="nav__item"><a href="/contact">Contact</a></li>
        <li class="nav__item"><a href="/team">Team</a></li>
        <% } %>
      </ul>
    </nav>
  </div>

  <div class="login">
    <% if(user) { %>
    <a id="user" href="/api/v1/user/me"><%= user.username %></a>
    <a href="/api/v1/auth/signout">Signout</a>
    <% } else { %>
    <a href="/login">Login</a>
    <a href="/login">Signup</a>
