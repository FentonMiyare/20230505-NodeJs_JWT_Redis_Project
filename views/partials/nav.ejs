      <ul class="nav__list" role="list">
        <li class="nav__item">
          <a href="/" aria-current="page">Home</a>
        </li>
        <% if(user) { %> <% if(user.roles.length === 1) { %>
        <li class="nav__item"><a href="/api/v1/user">User</a></li>
        <% } else if (user.roles.length === 2) { %>
